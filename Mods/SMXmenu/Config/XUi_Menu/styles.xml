<configs>

<!--	// SMX // Global Colors -->

		<append xpath="/styles/global">
			<style_entry name="menuElementsMenuBG"					value="0,0,0" />
			<style_entry name="menuElementsMenuLine"				value="128,128,128" />
			<style_entry name="menuElementsMenuBTN"					value="175,30,25" />

			<style_entry name="menuElementsBG"						value="0,0,0" />
			<style_entry name="menuElementsHDR"						value="175,30,25" />
			<style_entry name="menuElementsHDRLine"					value="255,255,255" />

			<style_entry name="menuElementsLBLPri"					value="255,255,255" />
			<style_entry name="menuElementsLBLSec"					value="128,128,128" />

			<style_entry name="menuElementsTipBRDR"					value="255,0,0" />
			<style_entry name="menuElementsTipBG"					value="0,0,0" />
		</append>


<!--	// SMX // Global Sounds -->

		<append xpath="/styles/global">
			<style_entry name="default_uihover" 					value="Sounds/UI/ui_hover" />
		</append>


<!--	// SMX // Defined Icon Colors -->

		<append xpath="/styles">
			<style name="smx_menu_icon_colors">
				<style_entry name="color" 							value="[white]" />				
				<style_entry name="hovercolor" 						value="[mediumGrey]" />				
				<style_entry name="selectedcolor" 					value="[lightGrey]" />				
			</style>
		</append>


<!--	// SMX // Menu Button -->

		<append xpath="/styles">
			<style name="smx_menu_button">
				<style_entry name="width" 							value="230" />				
				<style_entry name="height" 							value="60" />				
				<style_entry name="pivot" 							value="center" />				
			</style>
		</append>


<!-- 	// SMX // SMX Dev Tools -->

		<append xpath="/styles">
			<style name="smx_devtool_background" 					type="texture">
				<style_entry name="depth" 							value="1" />
				<style_entry name="texture" 						value="@modfolder:Textures/menu/smx_wip_bg.png" />
				<style_entry name="anchor_left" 					value="#cam,0,-5" />
				<style_entry name="anchor_bottom" 					value="#cam,0,-5" />
				<style_entry name="anchor_right" 					value="#cam,1,5" />
				<style_entry name="anchor_top" 						value="#cam,1,5" />
			</style>
		</append>


<!--	// SMX // New/Continue Game -->

		<append xpath="/styles">
			<style name="smx_ncgame_color_coding">
				<style_entry name="matching_version_color" 			value="60,255,60,128" />
				<style_entry name="compatible_version_color" 		value="255,216,0" />
				<style_entry name="incompatible_version_color" 		value="255,0,0" />
			</style>
		</append>


<!--	// SMX // Menu Panels -->

		<append xpath="/styles">
			<style name="smx_menupanel_window" 						type="window">
				<style_entry name="pos" 							value="-625,395" />
				<style_entry name="size" 							value="1250,780" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_header" 						type="panel">
				<style_entry name="name" 							value="header" />
				<style_entry name="depth" 							value="3" />
				<style_entry name="pos" 							value="0,5" />
				<style_entry name="height" 							value="80" />
				<style_entry name="disableautobackground" 			value="true" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_header_background" 			type="sprite">
				<style_entry name="depth" 							value="4" />
				<style_entry name="pos" 							value="0,15" />
				<style_entry name="size" 							value="1250,80" />
				<style_entry name="atlas" 							value="uiAtlas" />
				<style_entry name="sprite" 							value="smx_menu_panel_header" />
				<style_entry name="color" 							value="[menuElementsHDR]" />
				<style_entry name="globalopacitymod" 				value="1.8" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_background" 					type="sprite">
				<style_entry name="depth" 							value="2" />
				<style_entry name="pos" 							value="0,15" />
				<style_entry name="size" 							value="1250,765" />
				<style_entry name="atlas" 							value="uiAtlas" />
				<style_entry name="sprite" 							value="smx_menu_panel_background" />
				<style_entry name="color" 							value="[menuElementsBG]" />
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_title" 						type="label">
				<style_entry name="name" 							value="windowName" />
				<style_entry name="depth" 							value="6" />
				<style_entry name="pos" 							value="0,-5" />
				<style_entry name="size" 							value="1250,80" />
				<style_entry name="font_size" 						value="36" />
				<style_entry name="color" 							value="[menuElementsLBLPri]" />
				<style_entry name="upper_case" 						value="true" />
				<style_entry name="crispness" 						value="Never" />
				<style_entry name="effect" 							value="outline" />
				<style_entry name="effect_distance" 				value="1,1" />
				<style_entry name="justify" 						value="center" />
				<style_entry name="foregroundlayer" 				value="true" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_tabs" 						type="sprite">
				<style_entry name="depth" 							value="4" />
				<style_entry name="pos" 							value="15,-49" />
				<style_entry name="size" 							value="1230,52" />
				<style_entry name="atlas" 							value="uiAtlas" />
				<style_entry name="sprite" 							value="smx_menu_tabs_background" />
				<style_entry name="color" 							value="[menuElementsBG]" />
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_header_separation" 			type="sprite">
				<style_entry name="depth" 							value="5" />
				<style_entry name="pos" 							value="20,-50" />
				<style_entry name="size" 							value="5,1210" />
				<style_entry name="atlas" 							value="uiAtlas" />
				<style_entry name="sprite" 							value="smx_menu_panel_separate_line" />
				<style_entry name="color" 							value="[menuElementsHDRLine]" />
				<style_entry name="rotation" 						value="90" />
				<!--style_entry name="flip" 						value="horizontally" /-->
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

		<append xpath="/styles">
			<style name="smx_menupanel_tabs_separation" 			type="sprite">
				<style_entry name="depth" 							value="5" />
				<style_entry name="pos" 							value="20,-103" />
				<style_entry name="size" 							value="5,1210" />
				<style_entry name="atlas" 							value="uiAtlas" />
				<style_entry name="sprite" 							value="smx_menu_panel_separate_line" />
				<style_entry name="color" 							value="[menuElementsHDRLine]" />
				<style_entry name="rotation" 						value="90" />
				<!--style_entry name="flip" 						value="horizontally" /-->
				<style_entry name="globalopacitymod" 				value="1.5" />
			</style>
		</append>

</configs>